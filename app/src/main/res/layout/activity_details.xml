<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
                 <TextView
                    android:id="@+id/tv_details_title"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <!--
            android:text="@string/detail_items_info" -->
            <!-- Page Info -->
                <TextView
                    android:id="@+id/tv_details_info"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    android:singleLine="false"
                    android:lineSpacingMultiplier="1.3"
                    android:inputType="textMultiLine"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <!-- Spinner All Layout -->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Spinner TextView -->
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/spinner_date"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/spinner_time"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/spinner_duration"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/spinner_fee"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/spinner_trainer"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!-- Spinner Layout -->
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

            <!-- Date -->
                <TextView
                    android:id="@+id/tv_details_opening_date"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <!-- Time -->
                <TextView
                    android:id="@+id/tv_details_opening_time"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <!-- Duration -->
                <TextView
                    android:id="@+id/tv_details_course_duration"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <!-- Fee -->
                <TextView
                    android:id="@+id/tv_details_course_fee"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <!-- Trainer -->
                <TextView
                    android:id="@+id/tv_details_course_trainer"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:background="@drawable/bg_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Address -->
                <TextView
                    android:id="@+id/tv_details_address"
                    android:textColor="@color/colorBrown"
                    android:gravity="center"
                    android:singleLine="false"
                    android:maxLines="5"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <!-- Phone -->
                <TextView
                    android:id="@+id/tv_details_contact_phone"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Button -->
            <Button
                android:id="@+id/btn_details_register"
                android:text="@string/register"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_round"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    </LinearLayout>

</ScrollView>